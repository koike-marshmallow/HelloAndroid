<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ryokun.helloandroid.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droidimageid1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/droidimageid2"
        android:src="@drawable/star" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:id="@+id/slotbutton1"
        android:layout_below="@+id/droidimageid1"
        android:layout_alignLeft="@+id/droidimageid1"
        android:layout_alignRight="@+id/droidimageid1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droidimageid2"
        android:src="@drawable/star"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:id="@+id/slotbutton2"
        android:layout_below="@+id/droidimageid2"
        android:layout_alignLeft="@+id/droidimageid2"
        android:layout_alignRight="@+id/droidimageid2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droidimageid3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/droidimageid2"
        android:src="@drawable/star" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="●"
        android:id="@+id/slotbutton3"
        android:layout_below="@+id/droidimageid3"
        android:layout_alignLeft="@+id/droidimageid3"
        android:layout_alignRight="@+id/droidimageid3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="もう一回!"
        android:id="@+id/retrybutton"
        android:layout_below="@+id/slotbutton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
